<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
     android:background="@drawable/background2" 
     android:layout_centerVertical = "true" >

    <TextView
        android:id="@+id/chooseUsername"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:text="Choose your username:"
        android:textColor="@color/gold" />

    <EditText
        android:id="@+id/newUsername"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:ems="10"
        android:textColor="@color/cream"
        android:textColorHint="@color/cream" >

        <requestFocus />
    </EditText>

    <TextView
        android:id="@+id/password8"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Password( at least 6 characters):"
        android:textColor="@color/gold" />

    <EditText
        android:id="@+id/newPassword"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:ems="10"
        android:inputType="textPassword"
        android:textColor="@color/cream" />

    <TextView
        android:id="@+id/confirmPassword"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/newPasswordConfirm"
        android:layout_alignParentLeft="true"
        android:text="Confirm password:"
        android:textColor="@color/gold" />

    <EditText
        android:id="@+id/newPasswordConfirm"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_above="@+id/signUpComplete"
        android:layout_alignParentLeft="true"
        android:ems="10"
        android:inputType="textPassword"
        android:textColor="@color/cream" />

    <Button
        android:id="@+id/signUpComplete"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="130dp"
        android:text="Sign me up!"
        android:textColor="@color/lightgold" />

</LinearLayout>
